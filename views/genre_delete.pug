extends layout

block content

    h1 #{title}: #{genre.name}

    if books.length

        p #[strong Delete the following books before attempting to delete this author.]
        div(style='margin-left:20px;margin-top:20px')
            h4 books
            dl
                each instance in books
                    dt
                        a(href=instance.url) #{instance.title} - #{instance.author.family_name}, #{instance.author.first_name}

    else
        p Do you really want to delete this genre?

        form(method='POST')
            div.form-group
                input#bookid.form-control(type='hidden' name='genreid', value=genre._id )

            button.btn.btn-primary(type='submit') Delete
